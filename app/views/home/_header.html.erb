<div class="header-page-index text-center text-light position-fixed fixed-top bg-dark-4">
  <div class="<%= container_header %> p-sm-auto p-0 menu-index-user" id="menu-responsive">
    <nav class="navbar navbar-expand">
      <%= link_to root_path, class: "navbar-brand text-white" do %>
        <img src="/images/pworld.png" class="image-logo">
      <% end %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item btn_search_laptop d-sm-block ml-sm-3 d-none">
            <%= form_tag(search_path, :method => "get", class: 'navbar-form navbar-left rounded') do %>
              <div class="input-group btn-search-header d-flex flex-column-reverse">
                <div class="d-flex w-80 border-0 bootstrap-tagsinput bg-gray-light-3 rounded-pill">
                  <i class="fa fa-search m-1 text-muted-light"></i>
                  <%= search_field_tag :search, params[:search], class: "w-100 text-muted-light", id: "post-data", data: {autocomplete_source: search_posts_path}, placeholder: "Search" %>
                </div>
                <div class="menu-list-post text-left"></div>
              </div>
            <% end %>
          </li>

          <li class="nav-item btn_search_android d-sm-none d-block my-auto mx-2">
            <a class="fas fa-search fa-fw text-white" data-toggle="dropdown" href="#" role="button"></a>
            <div class="dropdown-menu w-100">
              <%= form_tag(search_path, :method => "get", class: 'navbar-form navbar-left rounded') do %>
                <div class="input-group">
                  <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control rounded" %>
                  <i class="fa fa-search" aria-hidden="true"></i>
                </div>
              <% end %>
            </div>
          </li>
        </ul>

        <ul class="navbar-nav ml-auto nav-flex-icons align-self-center d-flex">
          <% if user_signed_in? %>
            <li class="nav-item align-items-center mr-2">
              <%= link_to fa_icon("far fa-edit mr-2","Post"), new_post_path, class: "btn_create_post mr-2 px-2 w-100 text-muted-light bg-dark-6 d-flex text-decoration-none"%>
            </li>
            <li class="nav-item px-2 mr-2">
              <%= link_to current_user.post_followings.status_public.size, clippost_path, class: "btn_show_following_post align-items-center d-flex text-muted-light bg-dark-6", id: "count_post_followings" %>
            </li>
            <li class="nav-item dropdown">
              <a class="dropdown-toggle" id="dropdown_header" data-toggle="dropdown">
                <%= image_tag default_avatar_user(current_user), class: 'rounded-circle img-32px' %>
              </a>
              <div class="dropdown-menu dropdown-menu-right dropdown-info header-setting bg-dark-4" aria-labelledby="dropdown_header">
                <%= link_to "Profile", user_path(current_user), class: "dropdown-item py-2 text-muted-light" %>
                <%= link_to "Password", reset_password_path, class: "dropdown-item py-2 text-muted-light" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Draft", "#{user_path(current_user)}?status=draft", class: "dropdown-item py-2 text-muted-light" %>
                <%= link_to "Secret Articles", "#", class: "dropdown-item py-2 text-muted-light" %>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item text-muted-light d-flex">
                  <span class="pt-2">Dark mode </span>
                  <label class="switch ml-5 mt-1">
                    <%= form_tag do %>
                      <input type="checkbox" id= 'togBtn' data-mode-path="<%= mode_url %>" data-type="<%= type_mode %>" data-checked="<%= check_mode %>" checked>
                      <div class="slider round"></div>
                    <% end %>
                  </label>
                </div>
                <%= link_to "Setting", profile_path(current_user), class: "dropdown-item py-2 text-muted-light" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item py-2 text-muted-light" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Signup", signup_path, class: "btn btn-outline-light btn-sm px-3 btn-block" %>
            </li>
            <li class="nav-item">
              <%= link_to "Login", login_path, class: "btn text-white btn-sm px-3 btn-block w-100" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>