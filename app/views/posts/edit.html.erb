<% provide(:title, "Edit post - #{@post.title}")%>
<div class="container-build bg-light w-100">
    <div class="p-3">
        <%= form_for @post do |f| %>
            <div class="form-group d-flex">
                <%= f.text_field :title, class: "form-control placeholder-post-font-size w-85", placeholder: "Title", id: "title" %>
                <%= f.file_field :avatar, class: 'd-none' %>
                <div class="w-15">
                    <%= f.label :avatar, "Avatar post", class: 'w-98 form-control text-center text-secondary' %>
                </div>
            </div>
            <div class="form-group">
                <%= text_field_tag :tags, tagsinput_data(@post), id: "tag-data", 'data-role' => "tagsinput", data: {autocomplete_source: search_tags_path}, placeholder: "Tag your post. Maximun 5 tags" %>
                <div class="menu-list"></div>
            </div>
            <div class="form-group form-btn position-relative">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary dropdown-toggle btn-dropdown-status w-100 bg-white text-secondary" type="button">
                        Update
                    </button>
                    <div class="dropdown-menu-btn dropdown-menu-position bg-white position-absolute">
                        <div class="dropdown-header title-status text-size-10rem text-dark">Puslish your post</div>
                        <div class="dropdown-header">Visibility: </div>
                        <div class="dropdown-option text-size-08rem w-100 border-0">
                            <label class="post-publish text-muted" for="post-publish"><%= f.radio_button :status, :public, id: "post-publish", checked: true %> Publish</label><br>
                            <label class="post-draft text-muted" for="post-draft"><%= f.radio_button :status, :draft, id: "post-draft" %> Private draft</label>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="dropdown-option text-muted w-100 border-0">
                            <p class="text-scope-status text-size-08rem w-100"><i class="fas fa-globe-americas"></i>  Everyone can see your post</p> 
                        </div>
                        <div class="dropdown-option btn-submit w-100 border-0">
                            <%= f.button "Publish", class: "btn btn-outline-primary btn-sm btn-scope w-100" %>
                        </div>
                    </div>
                    <div class="dropdown-menu-text dropdown-menu-position bg-white text-size-10rem position-absolute">
                        <div class="dropdown-header ">Add a title, start writing something to publish.</div>
                    </div>
                </div>
            </div>
            <div class="form-group form-area">
                <%= f.label :content do %> <% end %>
                <%= f.rich_text_area :content %>
            </div>
        <% end %>
    </div>
</div>
